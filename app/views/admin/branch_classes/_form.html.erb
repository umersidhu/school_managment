<%= form_for [:admin, @branch_class], html:{class:"form-horizontal", "data-parsley-validate" => true } do |f| %>
  <% if @branch_class.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @branch_class.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="control-group">
    <label class="control-label">Class Name :</label>
    <div class="controls">
      <%= f.text_field :name, class: "span11", placeholder: "Enter Class Name",required: true, "aria-required" => true %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit "Submit", class: "btn btn-success" %>
    <%= link_to "Back", admin_branch_classes_path, class: "btn btn-primary pull-right" %>
  </div>
<% end %>
