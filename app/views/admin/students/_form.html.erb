<%= form_for [:admin, @student], as: :user, url: @student.id.present?  ? admin_student_path(@student) : admin_students_path(@student), html:{class:"form-horizontal", "data-parsley-validate" => true } do |ff| %>
  
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @student.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <label class="control-label">First Name :</label>
    <div class="controls">
      <%= ff.text_field :first_name, class: "span11", placeholder: "First Name", required: true, "aria-required" => true %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">Last Name :</label>
    <div class="controls">
      <%= ff.text_field :last_name, class: "span11", placeholder: "Last Name", required: true, "aria-required" => true %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">Email</label>
    <div class="controls">
      <%= ff.email_field :email, class: "span11", placeholder: "Valid Email", required: true, "aria-required" => true %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">Mobile No :</label>
    <div class="controls">
      <%= ff.text_field :mobile_number, class: "span11", placeholder: "Mobile#", required: true, "aria-required" => true %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">Status :</label>
    <div class="controls">
      <%= ff.select :status, User.statuses.map{|key, value| [key.titleize, key ]}, {prompt: "<----- select Status ----->"}, class: "span11", "aria-required" => true %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">Role:</label>
    <div class="controls">
      <%= ff.select :role, User.roles.map{|key, value| [key.titleize, key ] if key.eql? "student" }.reject(&:blank?), {}, class: "span11", "aria-required" => true %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">Password:</label>
    <div class="controls">
      <%= ff.password_field :password, class: "span11", placeholder: "Password", required: true, "aria-required" => true, autocomplete: "off" %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">Password Confirmation:</label>
    <div class="controls">
      <%= ff.password_field :password_confirmation, class: "span11", placeholder: "password_confirmation", required: true, "aria-required" => true, autocomplete: "off" %>
    </div>
  </div>
  <div class="form-actions">
    <%= ff.submit "Submit", class: "btn btn-success" %>
    <%= link_to "Back", admin_students_path, class: "btn btn-primary pull-right" %>
  </div>
<% end %>








  
  
