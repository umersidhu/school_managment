<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="card-box">
        <div class="header">
          <h2 class="pull-left"><i class="fa fa-building"></i><span>Subjects</span></h2>
          <%= link_to "New", new_admin_branch_class_subject_path, class: "btn btn-primary pull-right"%>
        </div>
        <div class="content table-responsive table-full-width">
          <% @subjects.each do |subject|%>
            <div class="col-sm-4 text-center">
              <div class="custom-card">
                <h3><%= subject.title %></h3>
                <div class="show-pages">
                  <%= link_to edit_admin_branch_class_subject_path(@branch_class, subject), class: "btn btn-primary btn-xs" do %>
                    edit 
                  <% end %>
                  <%= link_to admin_branch_class_subject_path(@branch_class, subject), class: "btn btn-xs btn-danger", method: :delete do %>
                    Delete 
                  <% end%>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
