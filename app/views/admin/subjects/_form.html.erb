<%= form_for [:admin, @branch_class, @subject], html:{class:"form-horizontal", "data-parsley-validate" => true } do |f| %>
  <% if @subject.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @subject.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="control-group">
    <label class="control-label">Subject Name :</label>
    <div class="controls">
      <div class="col-sm-10">
        <%= f.text_field :title, class: "span11", placeholder: "Enter Subject Name",required: true, "aria-required" => true %>
      </div>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit "Submit", class: "btn btn-success" %>
    <%= link_to "Back", admin_branch_classes_path, class: "btn btn-primary pull-right" %>
  </div>
<% end %>


