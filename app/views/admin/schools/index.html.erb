<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="header">
              <span><h2>Schools</h2></span>
              <span><%= link_to "New", new_admin_school_path, class: "btn btn-primary pull-right"%></span>
            </div>
            <div class="content table-responsive table-full-width">
              <table class="table table-striped">
                <thead>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Status</th>
                  <th>Action</th>
                </thead>
                <tbody>
                  <% @schools.each do |school|%>
                    <tr style="background-color: <%= '#d08f8f' if school.status.eql? 'inactive'%>">
                      <td><%= school.id %></td>
                      <td><%= school.name %></td>
                      <td><%= school.status %></td>
                      <td>
                        <%= link_to edit_admin_school_path(school), class: "btn btn-xs btn-success" do %>
                          <i class="fa fa-pencil"></i>  
                        <% end%>
                        <%= link_to admin_school_path(school), class: "btn btn-xs btn-danger", method: :delete do %>
                          <i class="fa fa-times"></i>  
                        <% end%>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
        </div>
    </div>
  </div>
</div>
