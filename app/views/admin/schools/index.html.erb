<div id="content-header">
  <div id="breadcrumb"> <a href="#" title="Go to Home" class="tip-bottom"><i class="fa fa-home"></i> Home</a> <a href="#" class="current">Schools</a> </div>
  <div class="custom-header">
    <h1>Schools 
      <span class="pull-right">
        <%= link_to new_admin_school_path, class: "btn btn-primary" do %>
          <i class="fa fa-school-cap"></i> New
        <% end %>
      </span>
    </h1>
  </div>
</div>

<div class="container-fluid">
  <hr>
  <div class="row-fluid">
    <div class="span12">
      <div class="widget-box">
        <div class="widget-title"> <span class="icon"> <i class="fa fa-th"></i> </span>
          <h5>All Schools</h5>
        </div>
        <div class="widget-content nopadding">
          <table class="table table-striped table-bordered">
            <thead>
              <th>ID</th>
              <th>Name</th>
              <th>Status</th>
              <th>Action</th>
            </thead>
            <tbody>
              <% @schools.each do |school|%>
                <tr style="background-color: <%= '#d08f8f' if school.inactive?%>">
                  <td><%= school.id %></td>
                  <td><%= school.name %></td>
                  <td><%= school.status %></td>
                  <td>
                    <%= link_to edit_admin_school_path(school), class: "btn btn-xs btn-success" do %>
                      <i class="fa fa-pencil"></i>  
                    <% end%>
                    <%= link_to admin_school_path(school), class: "btn btn-xs btn-danger", method: :delete do %>
                      <i class="fa fa-times"></i>  
                    <% end%>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
