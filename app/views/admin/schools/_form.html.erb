<%= form_for [:admin, @school], html:{class:"form-horizontal" } do |f| %>
  <% if @school.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @school.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <label class="control-label">Name: </label>
    <div class="controls">
    <%= f.text_field :name, class: "form-control", class: "span11", placeholder: "Enter School Name", "required" => "", "aria-required" => true %>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label">Status: </label>
    <div class="controls">
    <%= f.select :status, School.statuses.map{|key, value| [key.titleize, key ]}, {}, class: "form-control", class: "span11", "aria-required" => true %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Submit", class: "btn btn-success" %>
    <%= link_to "Back", admin_schools_path, class: "btn btn-primary pull-right" %>
  </div>
<% end %>