<%= form_for [:admin, @school], html:{class:"form-horizontal" } do |f| %>
  <% if @school.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @school.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label "", class:"control-label col-sm-2" do %>
      Name:<span class="text-danger">*</span>
    <% end %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", placeholder: "Enter School Name", "required" => "", "aria-required" => true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "", class:"control-label col-sm-2" do %>
      Status:<span class="text-danger">*</span>
    <% end %>
    <div class="col-sm-10">
      <%= f.select :status, School.statuses.map{|key, value| [key.titleize, key ]}, {}, class: "form-control", "aria-required" => true %>
    </div>
  </div>
  <div class="form-group"> 
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Submit", class: "btn btn-success" %>
      <%= link_to "Back", admin_schools_path, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>