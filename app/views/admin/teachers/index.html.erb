<div id="content-header">
  <div id="breadcrumb"> <a href="#" title="Go to Home" class="tip-bottom"><i class="fa fa-home"></i> Home</a> <a href="#" class="current">Teachers</a> </div>
  <div class="custom-header">
    <h1>Teachers 
      <span class="pull-right">
        <%= link_to new_admin_teacher_path, class: "btn btn-primary" do %>
          <i class="fa fa-graduation-cap"></i> New
        <% end %>
      </span>
    </h1>
  </div>
</div>
<div class="container-fluid">
  <hr>
  <div class="row-fluid">
    <div class="span12">
      <div class="widget-box">
        <div class="widget-title"> <span class="icon"> <i class="fa fa-th"></i> </span>
          <h5>All Teachers</h5>
        </div>
        <div class="widget-content nopadding">
          <table class="table table-bordered table-striped">
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Mobile Number</th>
                <th>Role</th>
                <th>Status</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% @teachers.each do |teacher|%>
                <tr class="odd gradeA" style="background-color: <%= '#d08f8f' if teacher.inactive? %>">
                  <td><%= teacher.full_name %></td>
                  <td><%= teacher.email %></td>
                  <td><%= teacher.mobile_number %></td>
                  <td><%= teacher.role %></td>
                  <td><%= teacher.status %></td>
                  <td>
                    <%= link_to edit_admin_teacher_path(teacher), class: "btn btn-xs btn-success" do %>
                      <i class="fa fa-pencil"></i>  
                    <% end%>
                    <%= link_to admin_teacher_path(teacher), class: "btn btn-xs btn-danger", method: :delete do %>
                      <i class="fa fa-times"></i>  
                    <% end%>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
