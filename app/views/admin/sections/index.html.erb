<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="card-box">
        <div class="header">
          <h2 class="pull-left"><i class="fa fa-building"></i><span><%= @branch_class.name %> Sections</span></h2>
          <%= link_to "New", new_admin_branch_class_section_path(@branch_class), class: "btn btn-primary pull-right"%>
        </div>
        <div class="content table-responsive table-full-width">
          <% @sections.each do |class_section|%>
            <div class="col-sm-4 text-center">
              <div class="custom-card">
                <%= link_to admin_branch_class_section_student_sections_path(@branch_class, class_section) do %><h3 class="text-center"><%= class_section.section.humanize %></h3><% end %>
                <div class="show-pages">
                  
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
