<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 form-card">
      <div class="card">
        <div class="heading">
          <h3 class="text-center"><%= @branch.branch_name %></h3>
        </div>
        <table class="table table-stripped">
        	<tr>
        		<td>School Name:</td>
        		<td><%= @branch.school.name%></td>
        	</tr>
        	<tr>
        		<td>Cover Image</td>
        		<td><%= image_tag(@branch.cover.url, class: "branch-img") %></td>
        	</tr>
        	<tr>
        		<td>Branch Name</td>
        		<td><%= @branch.branch_name %></td>
        	</tr>
        	<tr>
        		<td>City</td>
        		<td><%= @branch.city %></td>
        	</tr>
        	<tr>
        		<td>Address</td>
        		<td><%= @branch.address %></td>
        	</tr>
        	<tr>
        		<td>Status</td>
        		<td><%= @branch.status %></td>
        	</tr>
        </table>

        <%= link_to "Back" , admin_branches_path, class: "btn btn-primary" %>
    	</div>
		</div>
    <div class="col-md-6 form-card">
      <div class="card">
        <div class="heading">
          <h3 class="text-center">Owner</h3>
        </div>
        <% if @owner.present? %>
          <table class="table table-stripped">
            <tr>
              <td>Owner Name</td>
              <td><%= @owner.full_name %></td>
            </tr>
            <tr>
              <td>Email</td>
              <td><%= @owner.email %></td>
            </tr>
            <tr>
              <td>Mobile number</td>
              <td><%= @owner.mobile_number %></td>
            </tr>
            <tr>
              <td>Role</td>
              <td><%= @owner.role %></td>
            </tr>
            <tr>
              <td>Status</td>
              <td><%= @owner.status %></td>
            </tr>
          </table>

          <%= link_to edit_admin_branch_user_path(@branch,  @owner), class: "btn btn-warning " do %>
            <i class="fa fa-user"><i class="fa fa-pencil"></i></i>
          <% end %>
        <% else %>
          <h5>No owner assigned yet!</h5>
        <% end %>
      </div>
    </div>
	</div>
</div>
